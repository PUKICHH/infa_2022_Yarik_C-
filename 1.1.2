#include <iostream>

int main() {
    int a, s = 0;
    char d;
    std::cin >> a;
    for (int i = 0; i < a; i++) {
        std::cin >> d;
        if (d == '(') {
            s++;
        } else {
            if (d == ')') {
                s--;
            }
        }
        if (s < 0) {
            break;

        }
    }
    if (s != 0) {
        std::cout << "NEVERNO";

    } else {
        std::cout << "VERNO";
    }

}
